function [] = show_height_maps(

M = max(max(height_map(:)), max(height_map_row(:)));
m = min(min(height_map(:)), min(height_map_row(:)));

if M == m
    m = 0.0;
end

n = M - m;

if n == 0
    n = 1;
end

figure;
subplot(1, 3, 1);
imshow((height_map_avg - m )/ n);
title('average');

% figure;
subplot(1, 3, 2);
imshow((height_map_row -m)/ n);
title('row');
% figure;
subplot(1, 3, 3);
imshow((height_map - m)/ n);
title('column');